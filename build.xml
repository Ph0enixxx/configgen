<?xml version="1.0" encoding="utf-8"?>
<project name="configgen" default="dist">
    <property name="src" value="src/"/>
    <property name="build" value="classes/"/>

    <target name="init">
        <mkdir dir="${build}"/>
    </target>

    <target name="compile" depends="init">
        <javac encoding="UTF-8" srcdir="${src}" destdir="${build}" includeantruntime="false" debug="true" excludes="**/*Test.java"
               debuglevel="lines,source">
        </javac>
    </target>

    <target name="clean">
        <delete dir="${build}"/>
    </target>

    <target name="dist" depends="clean, compile">
        <copy todir="${build}/support">
            <fileset dir="${src}/support"/>
        </copy>
        <jar jarfile="configgen.jar" basedir="${build}" manifest="${src}/MANIFEST.MF"/>
		<delete dir="${build}"/>
    </target>

</project>
